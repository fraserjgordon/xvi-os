{
    "configurations": [
        {
            "name": "XVI GCC x86_64",
            "compilerPath": "/opt/cross/bin/x86_64-xvi-g++",
            "cStandard": "c17",
            "cppStandard": "c++23",
            "intelliSenseMode": "linux-gcc-x64",
            "compileCommands": "${workspaceRoot}/out/compile_commands.json",
            "browse": {
                "limitSymbolsToIncludedHeaders": true,
                "path": [
                    "${workspaceFolder}"
                ]
            },
            "mergeConfigurations": true
        },
        {
            "name": "XVI GCC (host)",
            "compilerPath": "/opt/cross/bin/g++",
            "cStandard": "c17",
            "cppStandard": "c++23",
            "intelliSenseMode": "linux-gcc-x64",
            "compileCommands": "${workspaceFolder}/out/compile_commands.json",
            "includePath": [
                "${workspaceFolder}/**"
            ],
            "browse": {
                "limitSymbolsToIncludedHeaders": true,
                "path": [
                    "${workspaceFolder}"
                ]
            },
            "mergeConfigurations": true
        }
    ],
    "version": 4
