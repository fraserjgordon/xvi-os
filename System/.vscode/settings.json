{
    "cmake.buildDirectory": "${workspaceRoot}/.xvi.build",
    "cmake.configureOnOpen": true,
    "cmake.configureSettings": 
    {
        "CMAKE_TOOLCHAIN_FILE": "${workspaceRoot}/cmake/xvi.toolchain.cmake",
        "XVI_COMPILER": "gcc",
        "XVI_ARCH": "x86_64"
    },
    "C_Cpp.intelliSenseEngineFallback": "Enabled",
    "files.associations": {
        "array": "cpp",
        "functional": "cpp",
        "tuple": "cpp",
        "type_traits": "cpp",
        "utility": "cpp"
    },
    //"cmake.copyCompileCommands": "${workspaceRoot}/.xvi.build/compile_commands.json",
}
